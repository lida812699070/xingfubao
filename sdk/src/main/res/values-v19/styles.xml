<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--ture就是半透明  false全透明-->
        <item name="android:windowTranslucentStatus">false</item>
        <!--导航栏不要透明  华为手机又导航栏 会被遮挡-->
        <item name="android:windowTranslucentNavigation">false</item>

        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/theme_color</item>
        <item name="actionMenuTextColor">#ffffff</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="colorControlNormal">@color/theme_color</item>
        <item name="colorControlActivated">@color/theme_color</item>
        <!--<item name="android:windowTranslucentStatus">false</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--&lt;!&ndash;Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色&ndash;&gt;-->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>