<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_55"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="9dp"
    android:layout_marginRight="25dp"
    android:background="@drawable/shape_white_radius_8">

    <TextView
        android:id="@+id/tvNATtUnLockTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="NAT解锁包1"
        android:textColor="@color/color_text_111"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNATtUnLockInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:text="期数:12个月 兑换比率：1.2"
        android:textColor="@color/color_text_111"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvNATtUnLockTitle"
        app:layout_constraintLeft_toRightOf="@+id/tvNATtUnLockTitle"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/ivNatClubRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:src="@mipmap/dui_icon_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>