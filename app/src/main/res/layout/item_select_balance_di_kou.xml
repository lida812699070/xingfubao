<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp50"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="商城积分"
        android:textColor="@color/color_text_111"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="余额：200"
        android:textColor="@color/color_text_888"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvName"
        app:layout_constraintLeft_toRightOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvCanDiKou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/selector_green_right"
        android:drawablePadding="10dp"
        android:text="可抵扣 ¥20.00"
        android:textColor="@color/color_light_org"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvName"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>