<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_default_bg"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/llBottom"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvTabMall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_sc"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="商城"
            android:textColor="@color/color_selector_theme_909"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tvTabYXB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_yxb"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="银杏宝"
            android:textColor="@color/color_selector_theme_909"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tvTabNat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_nat"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="基金会"
            android:textColor="@color/color_selector_theme_909"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tvTabLiulan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_liulan"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="浏览"
            android:textColor="@color/color_selector_theme_909"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tvTabMine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_me"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="我的"
            android:textColor="@color/color_selector_theme_909"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"
        app:layout_constraintTop_toTopOf="@+id/llBottom" />

</android.support.constraint.ConstraintLayout>