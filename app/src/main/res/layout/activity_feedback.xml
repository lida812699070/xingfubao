<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_default_color"
    android:fillViewport="true"
    tools:context="com.xfb.xinfubao.activity.FeedbackActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_default_color">

        <com.xfb.xinfubao.view.MyToolbarBar
            android:id="@+id/myToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:str_title_toolbar="意见反馈" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clTitle"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_white_radius_8"
            app:layout_constraintTop_toBottomOf="@+id/myToolbar">

            <View
                android:id="@+id/viewLineCenter"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_line_e0e"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tvOnlineKefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@mipmap/icon_light_org_kefu"
                android:drawablePadding="8dp"
                android:text="在线客服"
                android:textColor="@color/color_light_org"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/viewLineCenter"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvOnlineKefuTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="工作时间9:00-23:00"
                android:textColor="@color/color_text_888"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/tvOnlineKefu"
                app:layout_constraintRight_toRightOf="@+id/tvOnlineKefu"
                app:layout_constraintTop_toBottomOf="@+id/tvOnlineKefu" />

            <TextView
                android:id="@+id/tvWeChatKefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@mipmap/icon_light_org_wechat"
                android:drawablePadding="8dp"
                android:text="微信客服"
                android:textColor="@color/color_light_org"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/viewLineCenter"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvWeChatKefuTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="工作时间9:00-23:00"
                android:textColor="@color/color_text_888"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/tvWeChatKefu"
                app:layout_constraintRight_toRightOf="@+id/tvWeChatKefu"
                app:layout_constraintTop_toBottomOf="@+id/tvWeChatKefu" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tvFeedbackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="反馈内容"
            android:textColor="@color/color_text_111"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clTitle" />

        <EditText
            android:id="@+id/etFeedback"
            android:layout_width="0dp"
            android:layout_height="135dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_white_radius_8"
            android:gravity="top|left"
            android:hint="请将您的意见或者建议详细的告诉我们～"
            android:maxLength="255"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:paddingRight="7dp"
            android:paddingBottom="10dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/tvFeedbackText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFeedbackText" />

        <TextView
            android:id="@+id/tvFeedbackIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="0/255"
            android:textColor="@color/color_text_888"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/etFeedback"
            app:layout_constraintRight_toRightOf="@+id/etFeedback" />

        <TextView
            android:id="@+id/tvAddPicText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="添加图片"
            android:textColor="@color/color_text_111"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etFeedback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（最多上传9张图）"
            android:textColor="@color/color_text_888"
            android:textSize="13sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvAddPicText"
            app:layout_constraintLeft_toRightOf="@+id/tvAddPicText" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAddPicText" />

        <TextView
            android:id="@+id/tvMobileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="常用手机"
            android:textColor="@color/color_text_111"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

        <EditText
            android:id="@+id/etMobileInputMobile"
            style="@style/LoginInput"
            android:layout_marginTop="9dp"
            android:background="@drawable/shape_white_radius_8"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="7dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMobileText"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="*为了保护您的隐私，我们绝不会将您的反馈"
            android:textColor="@color/color_text_888"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@+id/etMobileInputMobile"
            app:layout_constraintRight_toRightOf="@+id/etMobileInputMobile"
            app:layout_constraintTop_toBottomOf="@+id/etMobileInputMobile" />

        <TextView
            android:id="@+id/tvOK"
            style="@style/MainBtn"
            android:layout_marginTop="30dp"
            android:text="提交"
            app:layout_constraintTop_toBottomOf="@+id/tvHint"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/tvOK" />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
